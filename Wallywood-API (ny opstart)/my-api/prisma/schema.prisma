generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  role String
  isActive Boolean @default(true)

  @@map("user")
}




model cartlines {
  id Int @id @default(autoincrement())
  userId Int
  posterId Int
  quantity Int
  createdAt DateTime @default (now())
}

enum Role{
  ADMIN
  USER
}
model Users {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  role Role
  isActive Boolean @default(true)
  createdAt DateTime @default (now())

  @@map("users")
}

model userRatings {
  id Int @id @default(autoincrement())
  userId Int
  posterId Int
  numStars Int
  createdAt DateTime
}

model Poster {
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  description String?
  image String?
  width Int?
  Height Int?
  price Decimal @db.Decimal(10,2)
  stock Int
  createdAt DateTime @default (now())
  updatedAt DateTime @updatedAt

  genres genrePosterRel[]
  @@map("posters")
}

model genrePosterRel {
  genreId Int
  posterId Int

  genre Genre @relation(fields: [genreId], references: [id])
  poster Poster @relation(fields: [posterId], references: [id])

  @@id([genreId, posterId])
  @@map ("genreposterrel")
}

model Genre {
  id Int @id @default(autoincrement())
  title String
  slug String @unique
  createdAt DateTime @default (now())
  updatedAt DateTime @updatedAt

  posters genrePosterRel[]
  @@map("genres")
}
